{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "gen": 2
  },
  "emulators": {
    "functions": { "host": "0.0.0.0", "port": 5001 },
    "hosting": { "host": "0.0.0.0", "port": 5000 },
    "ui": {      "enabled": true    },
    "singleProjectMode": true
  }
}
